<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_10">

    <ImageView
        android:id="@+id/view_image"
        android:layout_width="@dimen/image_view_thumb"
        android:layout_height="@dimen/image_view_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/view_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_image"
        android:layout_marginLeft="@dimen/margin_10">

        <TextView
            android:id="@+id/movie_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:text="Name : Friends For Ever"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/movie_released_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:text="Year : 2010"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>